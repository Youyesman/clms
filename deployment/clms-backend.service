[Unit]
Description=gunicorn daemon for CLMS Backend
After=network.target

[Service]
User=root
Group=www-data
RuntimeDirectory=gunicorn
WorkingDirectory=/home/clms/castingline_backend
ExecStart=/home/clms/castingline_backend/venv/bin/gunicorn --access-logfile - --workers 3 --bind unix:/run/gunicorn/clms.sock castingline_backend.wsgi:application

[Install]
WantedBy=multi-user.target
